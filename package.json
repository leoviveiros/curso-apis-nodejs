{
  "name": "curso-apis-nodejs",
  "version": "1.0.0",
  "description": "http://localhost:3000/documentation",
  "main": "src/api.js",
  "type": "module",
  "scripts": {
    "preinstall": "npm install -g pm2",
    "test": "mocha src/test/*.js",
    "test:watch": "mocha src/test/*.js -w",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "start": "nodemon src/api.js",
    "prod": "cross-env NODE_ENV=prod pm2-runtime src/api.js",
    "local-prod": "cross-env NODE_ENV=local-prod pm2-runtime src/api.js",
    "deploy": "git push heroku master",
    "logs": "heroku logs --tail --app leoviveiros-apis-nodejs"
  },
  "engines": {
    "node": "16.x"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/inert": "^7.0.0",
    "@hapi/jwt": "^2.1.1",
    "@hapi/vision": "^7.0.0",
    "bcrypt": "^5.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "hapi-swagger": "^14.5.5",
    "joi": "^17.6.0",
    "mongoose": "^6.4.2",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.17.0"
  },
  "devDependencies": {
    "mocha": "^9.2.1"
  }
}
